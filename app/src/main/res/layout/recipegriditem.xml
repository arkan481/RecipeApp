<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:animateLayoutChanges="false"
    android:id="@+id/cvrecipeitemid"
    android:elevation="18dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="179dp"
    android:layout_height="300dp"
    >
    <RelativeLayout
        android:animateLayoutChanges="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/recipeimageid"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/saladimage"
            />
        <TextView
            android:id="@+id/recipetitleid"
            android:layout_margin="5dp"
            android:layout_below="@id/recipeimageid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="salad"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            />
        <View
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            android:layout_below="@id/recipetitleid"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lasteditedid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:text="Last Edited: "
                />
            <TextView
                android:id="@+id/dateid"
                android:textColor="@android:color/darker_gray"
                android:layout_toRightOf="@id/lasteditedid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/20/2001"
                />
            <ImageView
                android:id="@+id/trashbutton"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="25dp"

                />
        </RelativeLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>