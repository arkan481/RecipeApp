<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/recipedetailfragmentid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.RecipeDetailFragment">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabdetailid"
        android:src="@drawable/ic_done_black_24dp"
        android:text="+"
        android:elevation="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:fabSize="normal"
        android:backgroundTint="@android:color/holo_orange_light"
        app:borderWidth="0dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/foodtitleetid"
                android:inputType="text"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter The Food Title..."
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/saladimage"
                />
            <TextView
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Ingridients"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="For 4 Servings"
                android:textSize="18sp"
                />
            <LinearLayout
                android:background="@android:color/transparent"
                android:id="@+id/ingridientslayoutid"
                android:clipToPadding="false"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="5dp"
                    android:id="@+id/addingridientsbuttonid"
                    app:cardCornerRadius="5dp"
                    android:clipToPadding="false"
                    app:cardElevation="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@android:color/holo_blue_dark"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/addiconid"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/addicon"
                            android:layout_marginLeft="8dp"
                            />
                        <TextView
                            android:textSize="15sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/white"
                            android:paddingLeft="30dp"
                            android:layout_toRightOf="@id/addiconid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Add Ingridients"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                />
            <TextView
                android:textSize="25sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:text="Preparations"
                />
            <LinearLayout
                android:id="@+id/preparationslayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/addpreparationsbuttonid"
                    app:cardCornerRadius="5dp"
                    android:clipToPadding="false"
                    android:layout_marginTop="5dp"
                    app:cardElevation="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@android:color/holo_red_light"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/addiconingridientsid"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/addicon"
                            android:layout_marginLeft="8dp"
                            />
                        <TextView
                            android:textSize="15sp"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:textColor="@android:color/white"
                            android:paddingLeft="30dp"
                            android:layout_toRightOf="@id/addiconingridientsid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Add Preparations"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</FrameLayout>