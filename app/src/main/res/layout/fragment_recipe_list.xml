<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clipToPadding="false"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.RecipeListFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabplusid"
        android:src="@drawable/ic_add_black_24dp"
        android:text="+"
        android:elevation="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:fabSize="normal"
        android:backgroundTint="@android:color/holo_orange_light"
        app:borderWidth="0dp"
        />
    <RelativeLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:clipToPadding="false"
            android:background="@drawable/boxsearchbackground"
            android:id="@+id/searchlayout"
            android:elevation="18dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/searchiconid"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_black_24dp"/>
            <EditText
                android:layout_marginLeft="5dp"
                android:inputType="text"
                android:maxLines="1"
                android:id="@+id/searchrecipeetid"
                android:layout_centerVertical="true"
                android:background="@drawable/etsearchrecipebackground"
                android:layout_toRightOf="@id/searchiconid"
                android:layout_width="225dp"
                android:layout_height="60dp"
                android:hint="Search Recipes"
                />

                <Spinner
                    android:dropDownWidth="120dp"
                    android:layout_toRightOf="@id/searchrecipeetid"
                    android:background="@drawable/drsortet"
                    android:id="@+id/sortspinnerid"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    />
        </RelativeLayout>
        <GridView
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:layout_marginTop="5dp"
            android:columnWidth="205dp"
            android:id="@+id/recipegrid"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:numColumns="2"
            android:layout_below="@id/searchlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>










</FrameLayout>